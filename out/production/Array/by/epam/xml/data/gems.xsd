<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns="http://www.w3.org/2001/XMLSchema"
        targetNamespace="http://www.example.com/gems"
        xmlns:tns="http://www.example.com/gems"
        elementFormDefault="qualified">
    <element name="gems">
        <complexType>
            <sequence>
                <element name="gem" type="tns:Gem" minOccurs="1" maxOccurs="unbounded"/>
            </sequence>
        </complexType>
    </element>

    <complexType name="Gem">
        <sequence>
            <element name="name" type="string"/>
            <element name="origin" type="string"/>

            <element name="parameters">
                <complexType>
                    <sequence>
                        <element name="parameters" type="tns:Parameters" maxOccurs="1"/>
                    </sequence>
                </complexType>
            </element>
            <element name="value" type="positiveInteger"/>
        </sequence>

        <attribute name="preciousness" use="optional">
            <simpleType>
                <restriction base="string">
                    <enumeration value="precious"/>
                    <enumeration value="semiprecious"/>
                </restriction>
            </simpleType>
        </attribute>

        <attribute name="id" use="required">
            <simpleType>
                <restriction base="ID">
                    <pattern value="([a-z])[0-9]"/>
                </restriction>
            </simpleType>
        </attribute>
    </complexType>

    <complexType name="Parameters">
        <sequence>
            <element name="color" type="string">
                <simpleType>
                    <restriction base="string">
                        <enumeration value="green"/>
                        <enumeration value="white"/>
                        <enumeration value="blue"/>
                        <enumeration value="red"/>
                        <enumeration value="pink"/>
                        <enumeration value="orange"/>
                        <enumeration value="brown"/>
                    </restriction>
                </simpleType>
            </element>
            <element name="transparency" type="tns:Transparency"/>
            <element name="edges" type="tns:Edges"/>
        </sequence>
    </complexType>
    <simpleType name="Transparency">
        <restriction base="string">
            <pattern value="(1?)([0-9]?)[0-9]"/>
        </restriction>
    </simpleType>

    <simpleType name="Edges">
        <restriction base="string">
            <pattern value="(1[0-5])|([4-9])"/>
        </restriction>
    </simpleType>

</schema>